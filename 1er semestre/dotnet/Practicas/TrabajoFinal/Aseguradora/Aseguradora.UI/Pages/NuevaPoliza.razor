@page "/polizas/ingresar/{Id:int?}";
@inject NavigationManager Navigator;

<ListaPolizas/>
<Dialogo CerrarDialogo="Cerrar">
  <IngresarPoliza CerrarDialogo="Cerrar" Id="@Id"/>
</Dialogo>

@code {
    [Parameter] public int Id { get; set; }
    void Cerrar()
    { 
      Navigator.NavigateTo("/polizas");
    }
}