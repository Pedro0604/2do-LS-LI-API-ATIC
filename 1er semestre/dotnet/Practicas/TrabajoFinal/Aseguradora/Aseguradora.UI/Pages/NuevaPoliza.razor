@page "/polizas/ingresar/{Id:int?}";
@inject NavigationManager Navigator;

<ListaPolizas/>
<Dialogo CerrarDialogo="Cerrar" HasError=@_hasError>
  <IngresarPoliza CerrarDialogo="Cerrar" Id="@Id" OnError="MostrarError" Visible=@(!_hasError)/>
  <MensajeError Mensaje=@_mensaje Visible=@_hasError/>
</Dialogo>

@code {
    [Parameter] public int Id { get; set; }
    bool _hasError = false;
    string? _mensaje = "";
    void Cerrar()
    { 
      Navigator.NavigateTo("/polizas");
    }
    void MostrarError(string? mensaje){
      _mensaje = mensaje;
      _hasError = true;
    }
}