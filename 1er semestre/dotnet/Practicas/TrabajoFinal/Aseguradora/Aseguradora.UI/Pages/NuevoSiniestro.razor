@page "/siniestros/ingresar/{Id:int?}";
@inject NavigationManager Navigator;

<ListaSiniestros/>
<Dialogo CerrarDialogo="Cerrar">
  @if(!HasError){
  <IngresarSiniestro @ref="Ingresar" CerrarDialogo="Cerrar" Id="@Id" OnError="MostrarError"/>
  }
  else{
    <h3 class="text-danger">@MensajeError</h3>
  }
</Dialogo>

@code {
    [Parameter] public int Id { get; set; }
    public bool HasError { get; set; } = false;
    public string? MensajeError { get; set; }
    public IngresarSiniestro? Ingresar { get; set; } = null;
    void Cerrar()
    { 
      Navigator.NavigateTo("/siniestros");
    }
    void MostrarError(){
      HasError = true;
      MensajeError = Ingresar?.MensajeError;
      StateHasChanged();
    }
}