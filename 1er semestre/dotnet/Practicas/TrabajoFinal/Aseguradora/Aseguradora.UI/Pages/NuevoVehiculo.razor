@page "/vehiculos/ingresar/{Id:int?}";
@inject NavigationManager Navigator;
<PageTitle>Nuevo veh√≠culo</PageTitle>

<Dialogo CerrarDialogo="Cerrar" HasError=@_hasError>
  <IngresarVehiculo CerrarDialogo="Cerrar" Id="@Id" OnError="MostrarError" Visible=@(!_hasError)/>
  <MensajeError Mensaje=@_mensaje Visible=@_hasError/>
</Dialogo>

<ListaVehiculos/>
@code {
    [Parameter] public int Id { get; set; }
    bool _hasError = false;
    string? _mensaje = "";
    void Cerrar()
    { 
      Navigator.NavigateTo("/vehiculos");
    }
    void MostrarError(string? mensaje){
      _mensaje = mensaje;
      _hasError = true;
    }
}