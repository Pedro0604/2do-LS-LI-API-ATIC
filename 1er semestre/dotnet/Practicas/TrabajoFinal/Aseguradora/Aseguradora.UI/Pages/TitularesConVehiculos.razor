@page "/titulares/vehiculos/{Id:int?}";
@inject NavigationManager Navigator;
<PageTitle>Titulares con veh√≠culos</PageTitle>

<Dialogo CerrarDialogo="Cerrar" HasError=@_hasError>
  <ListaVehiculos IdTitular="@Id" OnError="MostrarError" ParaTitular=true Visible=@(!_hasError)/>
  <MensajeError Mensaje=@_mensaje Visible=@_hasError/>
</Dialogo>
<ListaTitulares/>

@code {
    [Parameter] public int Id { get; set; }
    bool _hasError { get; set; } = false;
    string? _mensaje = "";
    void Cerrar()
    { 
      Navigator.NavigateTo("/titulares");
    }
    void MostrarError(string? mensaje){
      _mensaje = mensaje;
      _hasError = true;
    }
}