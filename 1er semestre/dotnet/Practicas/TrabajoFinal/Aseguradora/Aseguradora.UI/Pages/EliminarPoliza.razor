@page "/polizas/eliminar/{Id:int?}";
@inject NavigationManager Navigator;
@inject EliminarPolizaUseCase EliminarPolizaUseCase;
@inject GetPolizaUseCase GetPolizaUseCase;

<ListaPolizas/>
<Dialogo CerrarDialogo="Cerrar">
  <ConfirmarEliminacion @ref="confirmar" CerrarDialogo="Cerrar" OnEliminar="Eliminar"/>
</Dialogo>

@code {
    [Parameter] public int Id { get; set; }
    Poliza _poliza = new Poliza();
    ConfirmarEliminacion confirmar = null!;
    protected override void OnAfterRender(bool first) 
    {
        var polizaEcontrado = GetPolizaUseCase.Ejecutar(Id);
        if(polizaEcontrado != null)
        {
            _poliza = polizaEcontrado;
            confirmar.AgregarMensaje($"Eliminar al Poliza {_poliza.Id}?");
        }
        else
        {
            confirmar.SetError(Id);
        }
    }
    void Eliminar(){
            EliminarPolizaUseCase.Ejecutar(Id);
    }
    void Cerrar()
    { 
        Navigator.NavigateTo("/polizas");
    }
}